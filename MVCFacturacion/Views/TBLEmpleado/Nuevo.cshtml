@model MVCFacturacion.Models.TBLEMPLEADO
@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/Shared/_LayoutFacturacion.cshtml";
}
<h2 class="well">Ingreso Empleado</h2>
@using (Html.BeginForm("Nuevo", "TBLEmpleado", FormMethod.Post))
{
    <p>@Html.LabelFor(d => d.strNombre) : @Html.TextBoxFor(d => d.strNombre) </p>
    <p>@Html.LabelFor(d => d.NumDocumento) : @Html.TextBoxFor(d => d.NumDocumento) </p>
    <p>@Html.LabelFor(d => d.StrDireccion) : @Html.TextBoxFor(d => d.StrDireccion) </p>
    <p>@Html.LabelFor(d => d.StrTelefono) : @Html.TextBoxFor(d => d.StrTelefono) </p>
    <p>@Html.LabelFor(d => d.StrEmail) : @Html.TextBoxFor(d => d.StrEmail) </p>
    <p> ROL : @Html.DropDownList("IdRolEmpleado") </p>
    <p>@Html.LabelFor(d => d.DtmIngreso) : @Html.EditorFor(d => d.DtmIngreso) </p>
    <p>@Html.LabelFor(d => d.DtmRetiro) : @Html.EditorFor(d => d.DtmRetiro) </p>
    <p>
        @Html.LabelFor(d => d.strDatosAdicionales) :<br /> @Html.TextAreaFor(d => d.strDatosAdicionales)
    </p>
    <input value="Guardar" type="submit" class="btn btn-success">
    <a class="btn btn-primary" href="~/TBLempleado">Retornar</a>
}
